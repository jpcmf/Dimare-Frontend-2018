@media (min-width: $screen-sm-min)
    .main-carousel
        // padding 25px 30px
        .carousel-inner
            .item
            .item-img
                height 454px
            .carousel-caption
                bottom 64px
                h1
                    font-size 69px
                p
                    // font-size 17px
                    // line-height 26px
                    // margin 20px 0 40px 0
                .btn-cotacao
                    // margin 20px auto 40px

