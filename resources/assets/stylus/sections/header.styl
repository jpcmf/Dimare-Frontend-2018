@media (max-width: $screen-xs-max) {
    .navbar-inverse {
        background-color: #000;
    }
}

.navbar {
    z-index: 1;
}

.navbar-brand {
    padding-top: 24px

    @media (min-width: $screen-md-min) {
        margin-right: 50px;
    }

    img {
        max-width: 134px;
    }
}

.navbar-nav > li > a {
    font-family: $font-oswald;
    font-weight: 200;
    text-transform: uppercase;
    @media (min-width: $screen-sm-min) {
        font-size: 16px;
    }

    @media (min-width: $screen-md-min) {
        font-size: 20px;
    }
}

.navbar-nav.navbar-right > li > a {
    font-size: 16px;
    color: $brand-primary;

    &:hover {
        color: #fff;
    }
}

.dropdown-menu {

    @media (min-width: $screen-sm-min) {
        text-align: center;
        font-size: 16px;
        top 100px
        left -30%
    }

    @media (min-width: $screen-md-min) {
        font-size: 18px;
    }
}

@media (min-width: $screen-md-min) {
    .dropdown-menu > li > a {
        font-family: $font-oswald;
        font-weight: 200;
        padding 10px 20px;
    }
}
