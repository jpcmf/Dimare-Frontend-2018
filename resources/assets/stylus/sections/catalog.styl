.catalog {
    margin-top: 47px
}

.catalog__image {
    background: url('/img/img-catalog.png') no-repeat center center;
    height 390px;
    max-width: 940px;
}

.catalog__form {
    background: url('/img/dots-background-black3.png') no-repeat center center;
    float: right;
    height 390px;
    max-width: 573px;

    form {
        padding: 0 40px

        .form-control {
            height: auto;
            padding: 2.5px 12px;

            &::placeholder {
                color: #fff;
            }
        }

        .select {
            background: url(/img/select-arrow2.png) no-repeat right;
            border-right: 0;
            height: 27px
            max-width: none;

            select {
                color: #fff;
                padding: 5px 10px;
            }
        }

        .btn {
            margin: 0 15px
            padding: 3px 12px;
        }
    }
}

.catalog__title {
    h2 {
        border-bottom: solid 3px $brand-primary;
        color: #fff;
        font-family: $font-oswald;
        font-size: 30px;
        font-weight: 200;
        left: -40px;
        padding-bottom: 10px
        position: relative;
        text-align: right;
        width: 193px;
    }

    p {
        color: #fff;
        padding: 0 40px;
    }
}
