.catalog {
    margin-top: 47px
}

.catalog__image {
    background: url('/img/img-catalog.png') no-repeat center center;
    height 390px;
    max-width: 940px;
}

.catalog__form {
    background: url('/img/dots-background-black3.png') no-repeat center center;
    float: right;
    height 390px;
    max-width: 573px;

    form {
        padding: 0 40px

        .form-control {
            height: auto;
            padding: 2.5px 12px;

            &::placeholder {
                color: #fff;
            }
        }

        .btn {
            // margin: 0 15px
            padding: 3px 12px;
        }
    }
}

.catalog__title {
    margin-bottom 10px

    @media (min-width: $screen-sm-min) {
        margin-bottom 27px
    }

    h2 {
        border-bottom: solid 3px $brand-primary;
        color: #fff;
        font-family: $font-oswald;
        font-size: 30px;
        font-weight: 200;
        left: -40px;
        padding-bottom: 10px
        position: relative;
        text-align: right;
        width: 193px;
    }

    p {
        color: #fff;
        padding: 0 40px;

        @media (max-width: $screen-xs-max) {
            font-size 12px;
        }
    }
}
