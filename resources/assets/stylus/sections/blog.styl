.page-blog,
.page-seja-um-lojista {
    footer {
        margin 0
    }
}

@media (max-width: $screen-sm-max) {
    .blog-page {
        .equal {
            flex-direction: column-reverse;
        }
    }
}

.blog__column-align {
    // margin-top 60px
    margin 60px auto 0
    max-width: 750px;
    padding 0 15px

    @media (min-width: $screen-md-min) {
        float: right;
        margin: 60px 0 0
        max-width: 470px;
        padding 0
    }
}

.blog__post {
    margin-bottom: 89px;

    h3, span {
        font-family: $font-oswald;
        text-transform: uppercase;
    }

    h3 {
        color: $brand-primary;
        font-size: 18px;
        font-weight: normal;
        letter-spacing: 0.9px;
        margin-top 0
    }

    .span {
        font-weight: 200;
    }

    .category {
        color: $brand-secondary;
    }

    .btn {
        display: block;
        margin-top 16px
        max-width: 105px;
        padding-bottom: 2px;
        padding-top: 2px;
    }
}

.blog__post-image {
    .blog__post-bg {
        img {
            margin-top 15px
            width 100%
        }

        @media (min-width: $screen-md-min) {
            background-color: #e9e9e9;
            float: left;
            left: -15px;
            position: relative;
            margin-top 25px

            img {
                left: 15px;
                position relative
                top: -15px;
                margin 0
            }
        }
    }
}

.blog__post-text {
    display: inline-block;
    margin-top 25px

    p {
        letter-spacing: 0.4px;
    }

    @media (min-width: $screen-md-min) {

    }
}

.blog__post-tags {
    background: url('/img/dots-background.png') no-repeat center center;
    height 50px
    margin-top 20px
    max-width 540px
    padding 16px 0

    ul li {
        padding 0 1px
    }

    span, a {
        letter-spacing: 0.7px;
        font-size: 14px;
        font-weight: 300;
    }

    span.tags {
        color: $brand-secondary;
        font-weight: 600;
        margin-left: 10px
    }

    a {
        color: $text-color;
        font-family: $font-oswald;
    }
}

.blog__post-social {
    margin-top 37px

    ul li {
        padding 0 1px
    }

    span {
        margin-right: 10px
    }
}

.blog-page--post {
    h3 {
        display: inline-block;
        margin-top 31px
    }

    .blog__post-text {
        margin-top 45px
    }
}

.blog__column-right {
    background-color: $blog-bg-color;

    hr {
        border-color: #dbdbdb;
        margin 40px 0;
    }
}

.blog__search,
.blog__categories,
.blog__tags,
.blog__reads {
    padding 0 15px
    max-width: 750px;
    margin: 0 auto;

    h4 {
        color: $brand-secondary;
        font-family: $font-oswald;
        font-size: 16px;
        font-weight: normal
        letter-spacing: 0.8px;
        margin-bottom 29px
        margin-top 0
    }

    a {
        // font-family: $font-oswald;
        // font-weight: 200;
        color: $text-color;
        display: inline-block;
    }

    @media (min-width: $screen-md-min) {
        padding 0 23px

    }
}

.blog__search {
    margin-bottom 30px
    margin-top 60px
    max-width: 750px;
    // margin-left: 0

    input {
        background: url('/img/icon-lupa.png') no-repeat 97% center;
        background-size: 15px;
        font-style: italic;
        max-width: 277px;
    }
}

.blog__categories {
    span {
        display: block;
        line-height: 30px;
    }
}

.blog__tags {
    a {
        border: solid 1px $select-border-color;
        padding 4px 10px
    }
}

.blog__reads {
    a {
        // line-height: 100px;
        min-height: 95px;
        position relative
        display: flex;
        align-items: center;

        span.text {
            position relative;
            z-index 2
            padding-left: 20px;
        }

        span.number {
            color: #fff;
            font-family: $font-oswald;
            font-size: 67px;
            font-weight: 500;
            left: 0
            letter-spacing: 3.4px;
            position absolute
            top 0
            z-index: 1
        }
    }
}
