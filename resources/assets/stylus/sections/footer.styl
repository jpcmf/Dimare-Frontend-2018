footer {
    background-color: $footer-bg-color;
    margin-top: 69px
    padding-top: 30px

    span {
        display: block;
    }

    .row > div {
        padding-bottom: 30px;

        @media (min-width: $screen-sm-min) {
            min-height: 180px;
            padding-bottom 0
        }

        @media (min-width: $screen-lg-min) {
            min-height: inherit;
        }
    }
}

.footer__link, footer h3 {
    font-family: $font-oswald;
    font-size: 17px;
    line-height: 40px;
}

.footer__link--white {
    color: #fff;
    font-size: 14px;
    line-height: 23px;
}

footer h3 {
    color: $brand-primary;
    margin: 0
    font-weight: normal;
}

.footer__logo {
    margin-top: 30px;

    .footer__social {
        padding-left: 100px;
    }

    @media (min-width: $screen-sm-min) {
        margin-top: 0
        text-align: left;
    }

    @media (min-width: $screen-lg-min) {
        text-align: right;
    }

    img {
        max-width: 173px;
    }
}

.footer__social {
    margin-top: 21px

    img {
        max-width: 27px;
    }
}

.footer__copy {
    background-color: #000;
    color: #fff;
    font-size: 11px;
    margin-top: 45px
    padding 10px 0

    p {
        margin 0
    }
}
